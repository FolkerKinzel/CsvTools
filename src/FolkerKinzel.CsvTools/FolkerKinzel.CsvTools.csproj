  <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
    <PackageReference Include="FolkerKinzel.Strings">
      <Version>3.3.0</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net5.0'">
